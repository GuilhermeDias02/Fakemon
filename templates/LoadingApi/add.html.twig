<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Add an event listener to the form
    document.getElementById("pokemonForm").addEventListener("submit", function (event) {
      // Prevent the default form submission
      event.preventDefault();

function removeLeadingZeros(str) {
    // Utiliser une expression régulière pour supprimer les zéros à gauche
    return str.replace(/^0+/, '');
}




      // Get the input values
      var name = document.getElementById("name").value || '-';
      var type = document.getElementById("type").value || '-';
      var region = document.getElementById("region").value || '-';
      var type2 = document.getElementById("type2").value || '-';
      var idPokedex = document.getElementById("idPokedex").value || '-';
      var image = document.getElementById("image").value || '-';
      var idNat = parseInt(removeLeadingZeros(idPokedex));
      // Create a new Pokemon object
      var newPokemon = {
        name: name,
        type: type,
        type2: type2,
        idPokedex: idPokedex,
        image: image,
        idNat: idNat,
        region: region
      };

      // Make a POST request to your API endpoint
      fetch('http://127.0.0.1:8000/api/pokemon', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/ld+json', // Set the content type to application/ld+json
        },
        body: JSON.stringify(newPokemon),
      })
      .then(response => response.json())
      .then(data => {
